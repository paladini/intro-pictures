<%= form_for @message do |f| %>
  <% if @message.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= "#{pluralize(@message.errors.count, "error")} prohibited this message from being sent:" %>
      </h2>

      <ul>
        <% @message.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      <ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label "Departamento" %>
    <%= f.select(:department, Department.all.collect {|a| a.name_pt}) -%>
  </div>

  <div class="field">
    <%= f.label :subject %>
    <%= f.text_field :subject %>
  </div>

  <div class="field">
    <%= f.label :content %>
    <%= f.text_area :content %>
  </div>

  <div class="field">
  	<%= f.label "Anexo" %>
  	<%= f.file_field :file %>
  </div>

  <div class="field">
  	<%= recaptcha_tags %>
  </div>

  <div class="actions">
    <%= f.submit 'Enviar', class: 'button' %>
  </div>
<% end %>